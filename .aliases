  git add .
  git commit -m "wip: $1"
}

delmerged () {  
  git checkout master
  git branch --merged | grep -v '* ' | xargs git branch -D 
}

git_new() {
  mkdir $1
  cd $1
  touch README.md
  git init
  git add . && git commit -m 'initial commit'
}

alias gn='git_new'
alias gc='git commit'
alias ga='git add'
alias gco='git checkout'
alias gb='git branch'
alias gst='git status'
alias gup='git pull --rebase'
alias gpoh='git push origin HEAD'
